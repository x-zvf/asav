<Window x:Class="asav.UrkundeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:asav"
        mc:Ignorable="d"
        Title="Urkundengenerator" Height="450" Width="800">
  <Grid>
    <ComboBox x:Name="schuljahrComboBox" HorizontalAlignment="Left" Margin="92,68,0,0" VerticalAlignment="Top" Width="135" SelectionChanged="SchuljahrComboBox_SelectionChanged" Height="23">
      <ComboBox.ItemTemplate>
        <DataTemplate>
          <StackPanel Orientation="Horizontal">
            <Rectangle Fill="{Binding schuljahr}" Height="16" Margin="0,2,5,2" />
            <TextBlock Text="{Binding schuljahr}" />
          </StackPanel>
        </DataTemplate>
      </ComboBox.ItemTemplate>
    </ComboBox>
    <CheckBox Name="AlleSchuljahre_Checkbox" Content="Alle Schuljahre" HorizontalAlignment="Left" Height="22" Margin="92,46,0,0" VerticalAlignment="Top" Width="120" Checked="AlleSchuljahre_Checked" Unchecked="AlleSchuljahre_Unchecked" />
    <Label Content="Für welche Schuljahre?" HorizontalAlignment="Left" Height="31" Margin="92,10,0,0" VerticalAlignment="Top" Width="135"/>

  </Grid>
</Window>
